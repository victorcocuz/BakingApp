<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/margin_medium"
    android:paddingTop="@dimen/margin_medium">


    <LinearLayout
        android:layout_width="@dimen/container_large"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/layout_recipe_master_ingredients_quantity"
            style="@style/TextLayoutGridText"
            android:layout_marginEnd="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_marginStart="@dimen/margin_large"
            android:fontFamily="@font/comfortaa_bold"
            tools:targetApi="jelly_bean"
            tools:text="0.5" />

        <TextView
            android:id="@+id/layout_recipe_master_ingredients_measure"
            style="@style/TextLayoutGridText"
            android:layout_marginEnd="@dimen/margin_xxlarge"
            android:layout_marginRight="@dimen/margin_xxlarge"
            android:fontFamily="@font/comfortaa_bold"
            tools:targetApi="jelly_bean"
            tools:text="Cups" />

    </LinearLayout>

    <TextView
        android:id="@+id/layout_recipe_master_ingredients_ingredient"
        style="@style/TextLayoutGridText"
        android:fontFamily="@font/comfortaa_light"
        android:maxLines="2"
        tools:targetApi="jelly_bean"
        tools:text="Cookies" />

</LinearLayout>