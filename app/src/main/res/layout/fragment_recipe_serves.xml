<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recipe_serves_card"
    android:layout_width="match_parent"
    android:layout_height="@dimen/container_regular_large"
    android:layout_marginTop="@dimen/margin_large">

    <LinearLayout
        android:id="@+id/recipe_serves_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/recipe_serves_icon_remove"
            android:layout_width="@dimen/container_small"
            android:layout_height="@dimen/container_small"
            android:layout_marginEnd="@dimen/margin_xxxlarge"
            android:layout_marginRight="@dimen/margin_xxxlarge"
            android:contentDescription="@string/icon_remove"
            android:src="@drawable/baseline_remove_circle_outline_24px" />

        <TextView
            android:id="@+id/recipe_serves_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/comfortaa_bold"
            android:textColor="@color/colorText"
            android:textSize="@dimen/text_title"
            tools:targetApi="jelly_bean" />

        <ImageView
            android:id="@+id/recipe_serves_icon_add"
            android:layout_width="@dimen/container_small"
            android:layout_height="@dimen/container_small"
            android:layout_marginLeft="@dimen/margin_xxxlarge"
            android:layout_marginStart="@dimen/margin_xxxlarge"
            android:contentDescription="@string/icon_add"
            android:src="@drawable/baseline_add_circle_outline_24px" />
    </LinearLayout>

</android.support.v7.widget.CardView>
