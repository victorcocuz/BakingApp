<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RecipeDetailActivity">

    <FrameLayout
        android:id="@+id/fragment_video_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/activity_detail_previous_step"
            style="@style/TextButton"
            android:text="@string/button_previous_step" />

        <View
            android:layout_width="@dimen/container_line"
            android:layout_height="match_parent"
            android:background="@color/colorText"/>

        <TextView
            android:id="@+id/activity_detail_next_step"
            style="@style/TextButton"
            android:text="@string/button_next_step" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>