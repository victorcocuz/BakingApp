<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin_medium"
    android:paddingTop="@dimen/margin_medium">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/layout_recipe_master_steps_title"
            style="@style/TextLayoutGridText"
            android:layout_marginEnd="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_marginStart="@dimen/margin_large"
            android:fontFamily="@font/comfortaa_bold"
            tools:targetApi="jelly_bean"
            tools:text="Step" />

        <TextView
            android:id="@+id/layout_recipe_master_steps_number"
            style="@style/TextLayoutGridText"
            android:fontFamily="@font/comfortaa_bold"
            tools:targetApi="jelly_bean"
            tools:text="1" />

        <TextView
            android:id="@+id/layout_recipe_master_steps_short_description"
            style="@style/TextLayoutGridText"
            android:fontFamily="@font/comfortaa"
            tools:targetApi="jelly_bean"
            tools:text="Do whatever" />

    </LinearLayout>

    <TextView
        android:id="@+id/layout_recipe_master_steps_description"
        style="@style/TextLayoutGridText"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginStart="@dimen/margin_large"
        android:fontFamily="@font/comfortaa_light"
        tools:targetApi="jelly_bean"
        tools:text="Do whatever" />

</LinearLayout>